/**index.wxss**/
page{
  background-color: #b3d4db;
  height:100%;
}
.user-index{
	display:flex;
  flex-direction: column;
  align-items:center;
}
.user-index image{
	width:200rpx;
	height:200rpx;
  border-radius: 50%;
  margin-top:200rpx;
}
.user-name{
  font-size: 32rpx;
  margin-top:100rpx;
  font-weight: bold; 
}
.user-title{
  margin-top:200rpx;
  border: 1px solid #405f80; 
  width:200rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 5px;
}
.user-title text{
  font-size: 22rpx;
  line-height: 80rpx;
  color:#405f80;
}